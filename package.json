{
    "name": "@vira/vds",
    "version": "1.51.1",
    "description": "Vira Design System",
    "main": "scss/vds.scss",
    "scripts": {
        "sass": "node-sass src/scss/vds.scss -o src/scss/vds.css",
        "postcss": "postcss src/scss/vds.css --config postcss.config.js -o dist/vds.css",
        "js": "webpack",
        "icons": "grunt",
        "fonts": "cp -r src/fonts dist/fonts",
        "styles": "npm run sass && npm run postcss",
        "build": "npm run js && npm run styles && npm run fonts && npm run icons"
    },
    "files": [
        "build/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Victin09/vira-design-system.git"
    },
    "keywords": [
        "design system",
        "icons"
    ],
    "author": {
        "name": "Victor Gomez",
        "email": "victorgomez1209@outlook.es",
        "url": "https://github.com/Victin09"
    },
    "license": "CC-BY-SA-4.0",
    "bugs": {
        "url": "https://github.com/Victin09/vira-design-system/issues"
    },
    "homepage": "https://github.com/Victin09/vira-design-system",
    "browserslist": [
        "defaults",
        "not ie <= 8"
    ],
    "devDependencies": {
        "cssnano": "^4.1.10",
        "grunt": "^1.0.4",
        "grunt-cli": "^1.2.0",
        "grunt-contrib-clean": "~0.5.0",
        "grunt-contrib-copy": "~0.5.0",
        "grunt-contrib-requirejs": "~0.4.4",
        "grunt-svgmin": "^6.0.0",
        "grunt-svgstore": "^2.0.0",
        "node-sass": "^6.0.1",
        "postcss": "^6.0.22",
        "postcss-cli": "^7.1.1",
        "postcss-import": "^11.1.0",
        "postcss-preset-env": "^5.1.0",
        "webpack": "^5.59.0",
        "webpack-cli": "^4.9.1"
    }
}
