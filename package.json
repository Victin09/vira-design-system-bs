{
  "scripts": {
    "install": "cd ./node_modules/vds && npm i && cd ../../ && symlink-dir ./node_modules/vds ./assets/vds",
    "setup": "npm i && npm run compile",
    "compile": "npm run compile-js && npm run compile-less && npm run compile-vds",
    "compile-vds": "cd ./assets/vds && npm run compile-less && npm run compile-rtl && npm run compile-js vds tests",
    "compile-js": "webpack",
    "compile-less": "make-dir css && lessc less/theme.less > css/theme.css --relative-urls --rootpath=../less/ --clean-css",
    "eslint": "eslint ./",
    "watch-js": "webpack -w --devtool=inline-source-map"
  },
  "eslintIgnore": [
    "*.min.js",
    "*.json"
  ],
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.4",
    "babel-loader": "^8.2.4",
    "eslint": "8.12.0",
    "eslint-plugin-vue": "^8.5.0",
    "less": "^4.1.2",
    "less-plugin-clean-css": "^1.5.1",
    "make-dir-cli": "^3.0.0",
    "symlink-dir": "^5.0.1",
    "vds": "git+https://github.com/Victin09/vira-design-system.git",
    "uniqid": "^5.4.0",
    "vue-loader": "^15.9.8",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  }
}
